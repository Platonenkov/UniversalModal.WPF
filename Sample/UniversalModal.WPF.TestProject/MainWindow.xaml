<Window x:Class="UniversalModal.WPF.TestProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversalModal.WPF.TestProject"
        mc:Ignorable="d"
        Title="Universal modal sample test" Height="250" Width="400">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
        </Grid.Resources>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Test Modal" Click="TestModal"/>
            <Button Content="Test Named" Click="TestNamed"/>
            <Button Content="Test IEnumerable" Click="TestEnumerable"/>
        </StackPanel>
    </Grid>
</Window>
